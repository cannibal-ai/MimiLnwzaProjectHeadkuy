<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="#F5F5F5"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/outline_add_photo_alternate_24"
                android:contentDescription="Preview Image" />

            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/etProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ชื่อ"
            android:textColor="@color/black"
            android:textColorHint="#A8A8A8" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ราคา"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="#A8A8A8" />

        <Spinner
            android:id="@+id/etType"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:popupTheme="@style/SpinnerPopupTheme"
            android:spinnerMode="dropdown"
            android:background="@drawable/kk"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="2dp"
                android:text="จำนวนวัตถุดิบ"
                android:textColor="#888"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btnMinus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_circle_gray"
                android:gravity="center"
                android:text="-"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etAddQty"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/bg_edit_qty"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/btnPlus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/bg_circle_green"
                android:gravity="center"
                android:text="+"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="รายละเอียด"
            android:textColor="@color/black"
            android:textColorHint="#A8A8A8" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#31653d"
            android:text="บันทึกรายการวัตถุดิบ" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
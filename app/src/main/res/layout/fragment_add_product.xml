<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.dashboard.DashboardFragment"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="0dp">


    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/btnChooseImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_camera"
                android:background="#E0E0E0" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />



        <EditText
            android:id="@+id/etProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="ชื่อ"
            android:textColor="@color/black"
            android:textColorHint="#A8A8A8" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:hint="ราคา"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="#A8A8A8" />

        <Spinner
            android:id="@+id/etType"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:popupTheme="@style/SpinnerPopupTheme"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="จำนวนวัตถุดิบ"
                android:textSize="16sp"
                android:textColor="#888"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:id="@+id/btnMinus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="-"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/bg_circle_gray"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/etAddQty"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="15dp"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textSize="15sp"
                android:background="@drawable/bg_edit_qty"/>

            <TextView
                android:id="@+id/btnPlus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="+"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/bg_circle_green"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="รายละเอียด"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="#A8A8A8" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#31653d"
            android:text="บันทึกรายการวัตถุดิบ" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
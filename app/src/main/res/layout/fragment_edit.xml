<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.dashboard.DashboardFragment"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="0dp">


    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgFoodEdit"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="Product Image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtName"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="#A8A8A8"
                android:hint="ชื่อ"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etPriceEdit"
                android:text=""
                android:hint="ราคา"
                android:textColor="@color/black"
                android:textColorHint="#A8A8A8"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/etTypeEdit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dropdown"
                android:popupTheme="@style/SpinnerPopupTheme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="เพิ่มจำนวนวัตถุดิบ"
                android:textSize="16sp"
                android:textColor="#E91E63"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:id="@+id/M"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="-"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/bg_circle_gray"
                android:textColor="@android:color/black"/>

            <EditText
                android:id="@+id/A"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="15dp"
                android:gravity="center"
                android:inputType="number"
                android:text="0"
                android:textSize="15sp"
                android:background="@drawable/bg_edit_qty"/>

            <TextView
                android:id="@+id/P"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="+"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/bg_circle_green"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etDescriptionEdit"
                android:text=""
                android:hint="รายละเอียด"
                android:textColor="@color/black"
                android:textColorHint="#A8A8A8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>





        </LinearLayout>


        <Button
            android:id="@+id/btnAddEdit"
            android:backgroundTint="@color/teal_700"
            android:text="ยืนยันเพื่อแก้ไข"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>